<h1>This is game lists</h1>
<ul> 
    <% game.forEach(games => { %>
    <li><%= games.name %> (Game ID: <%= games.gameid %>) (Genre ID: <%= games.genreid %>)</li>
    <% }) %>
    <form action="/game/<%= games.gameid %>? method=PUT" method="POST" style="display:inline;">
        <input type="text" name="game" value="<%= games.name %>" required>
        <button type="submit">Edit</button>
     </form>
</ul>


<h2>Add new Game</h2>
<form action="/game" method="POST">
    <label for="game">Game Name:</label>
    <input type="text" id="game" name="game" required>
    <button type = "submit">Add Game</button>
</form>